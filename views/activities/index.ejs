<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Activities</h1>

    <% for (let activity of activities){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(activity.images.length) {%>
                <img class="img-fluid" alt="" src="<%=activity.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= activity.title %> </h5>

                    <p class="card-text"><%= activity.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= activity.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/activities/<%=activity._id%>">View <%=activity.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const activities = { features: <%- JSON.stringify(activities) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
