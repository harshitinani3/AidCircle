<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1 style="margin-bottom: 12px;">All Activities</h1>

    <% for (let activity of activities){%>
    <div class="card mb-3", style="border-radius: 20px; border: 3px solid #ccc;">
        <div class="row">
            <div class="col-md-4">
                <%if(activity.images.length) {%>
                <img class="img-fluid" alt="" src="<%=activity.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://images.unsplash.com/photo-1616680214084-22670de1bc82?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= activity.title %> </h5>

                    <p class="card-text"><%= activity.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= activity.location%></small>
                    </p>
                    <a class="btn btn-primary", style="background-color: #40033c; border: 2px solid #32012F;" href="/activities/<%=activity._id%>">View <%=activity.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const activities = { features: <%- JSON.stringify(activities) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
